# GeekyGoose Compliance - Environment Configuration

# Database Configuration
# SECURITY: Change these default values in production!
DATABASE_URL=postgresql://your_db_user:CHANGE_THIS_PASSWORD@localhost:5432/geekygoose_db
POSTGRES_DB=geekygoose_db
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!

# Redis Configuration
REDIS_URL=redis://localhost:6379

# MinIO Object Storage
# SECURITY: Change default credentials in production!
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=CHANGE_THIS_MINIO_SECRET_KEY_456!
MINIO_BUCKET=geekygoose-docs
MINIO_USE_SSL=false

# Security
# CRITICAL: Generate a strong JWT secret for production!
JWT_SECRET=GENERATE_STRONG_JWT_SECRET_AT_LEAST_32_CHARS!

# AI Configuration
AI_PROVIDER=ollama
# Options: openai, ollama

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Ollama Configuration (if using Ollama)
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_MODEL=qwen2.5:14b
OLLAMA_CONTEXT_SIZE=32768

# Application URLs
NEXT_PUBLIC_API_URL=http://localhost:8000

# Development Settings
NODE_ENV=development
DEBUG=true

# Optional: External Integrations
# JIRA_URL=
# JIRA_TOKEN=
# SLACK_WEBHOOK_URL=
# TEAMS_WEBHOOK_URL=

# Optional: Email Configuration
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# FROM_EMAIL=noreply@yourcompany.com

# Optional: Monitoring
# SENTRY_DSN=
